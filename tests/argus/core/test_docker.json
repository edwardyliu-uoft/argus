{
  "llm": {
    "provider": "anthropic",
    "model": "claude-sonnet-4-5-20250929",
    "api_key_env": "ANTHROPIC_API_KEY",
    "max_retries": 3,
    "timeout": 300
  },
  "static_analysis": {
    "slither_timeout": 300,
    "mythril_timeout": 300,
    "output_format": "json",
    "use_docker": true,
    "docker": {
      "slither_image": "trailofbits/eth-security-toolbox:latest",
      "mythril_image": "mythril/myth:latest",
      "pull_policy": "if-not-present",
      "network_mode": "none",
      "remove_containers": true
    }
  },
  "output": {
    "directory": "argus",
    "preserve_intermediate": true
  },
  "paths": {
    "contracts": "contracts"
  }
}